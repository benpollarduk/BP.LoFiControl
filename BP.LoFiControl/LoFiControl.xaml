<UserControl x:Class="BP.LoFiControl.LoFiControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BP.LoFiControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ContentControl Name="ContentControl"/>
        <local:LoFiMask x:Name="Mask" 
                              Width="{Binding ElementName=ContentControl, Path=ActualWidth, Mode=OneWay}" 
                              Height="{Binding ElementName=ContentControl, Path=Height, Mode=OneWay}"/>
    </Grid>
</UserControl>
